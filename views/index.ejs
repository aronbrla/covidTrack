        </section>
        <!-- Contact-->
        <section class="page-section" id="contact">
            <div class="container">
                <div class="text-center">
                    <h2 class="section-heading text-uppercase">Contactanos</h2>
                    <h3 class="section-subheading text-muted">
                        Nos gustaria saber que opinas
                    </h3>
                </div>
                <form id="contactForm" method="POST" action="/contac-us">
                    <div class="row align-items-stretch mb-5">
                        <div class="col-md-6">
                            <div class="form-group">
                                <!-- Name input-->
                                <input
                                    class="form-control"
                                    name="name"
                                    id="name"
                                    type="text"
                                    placeholder="Nombre"
                                    required
                                />
                                <div
                                    class="invalid-feedback"
                                    data-sb-feedback="name:required"
                                >
                                    Es necesario un Nombre
                                </div>
                            </div>
                            <div class="form-group">
                                <!-- Email address input-->
                                <input
                                    class="form-control"
                                    name="email"
                                    id="email"
                                    type="email"
                                    placeholder="Correo electronico"
                                    required
                                />
                            </div>
                            <div class="form-group mb-md-0">
                                <!-- Phone number input-->
                                <input
                                    class="form-control"
                                    name="phone"
                                    id="phone"
                                    type="tel"
                                    placeholder="Teléfono"
                                    required
                                />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group form-group-textarea mb-md-0">
                                <!-- Message input-->
                                <textarea
                                    class="form-control"
                                    name="message"
                                    id="message"
                                    placeholder="Mensaje"
                                ></textarea>
                            </div>
                        </div>
                    </div>
                    <!-- Submit Button-->
                    <div class="text-center">
                        <button
                            class="btn btn-primary btn-xl text-uppercase"
                            id="submitButton"
                            type="submit"
                        >
                            Enviar Mensaje
                        </button>
                    </div>
                </form>
            </div>
        </section>
        <%- include('partials/footer')%>
    </body>
</html>
