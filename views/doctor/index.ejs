            <div class="row text-center mt-3">
                <span> Reporte</span>
            </div>
            <div class="row text-center mt-3">
                <canvas id="myChart" width="200" height="80"></canvas>
                <script>
                var canvas =  document.getElementById('myChart');
                var ctx = canvas.getContext('2d');
                var WIDTH= canvas.width;
                var WIDTH= canvas.height;
                var datos=[{num:6,color:"green",dato:"Pacientes en alta"},{num:4,color:"blue",dato:"Pacientes en tratamiento"}];
                var angulo =0;
                var angulof =0;
                var total=0;
                var X =80;
                var Y =30;
                for(let x of datos){
                    total=total+x.num;
                }
                for(let x of datos){
                    angulo=angulof;
                    angulof=angulof+6.28*x.num/total;
                    drawPieSlice(ctx,40,40,30,angulo,angulof,x.color);
                    escribir(x.dato,X,Y,"6",x.color);
                    Y=Y+20;
                }
                function escribir(texto,x,y,z,color){
                        ctx.fillStyle = color;
                        ctx.fillRect(x,y-10,10,10);
                        ctx.textAlign="left";
						ctx.font=z+"pt Verdana";
						ctx.fillStyle = "black";
						ctx.fillText(texto,x+14,y);
                }
                function drawPieSlice(ctx,centerX, centerY, radius, startAngle, endAngle, color ){
                ctx.fillStyle = color;
                ctx.beginPath();
                ctx.moveTo(centerX,centerY);
                ctx.arc(centerX, centerY, radius, startAngle, endAngle);
                ctx.closePath();
                ctx.fill();
                }
                </script>
            </div>
        </div>
    </div>
